 @model TodoFrontend_MVC.Models.TasksModel
@{
    Layout = null; // Disable the layout for this view
}
<!-- Include Bootstrap CSS -->
<link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />

<style>
    .add-task-container {
        max-width: 500px;
        margin: auto;
        padding: 20px;
        border: 1px solid #ddd;
        border-radius: 8px;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
        margin-top: 50px;
        background-color: #f9f9f9;
    }

        .add-task-container h2 {
            text-align: center;
            margin-bottom: 20px;
            color: #333;
        }

        .add-task-container .form-group label {
            font-weight: bold;
            color: #555;
        }

        .add-task-container .btn-primary {
            width: 100%;
        }
</style>

<div class="container add-task-container">
    <h2>Add New Task</h2>
    <form asp-action="AddTask" method="post">
        <div class="form-group">
            <label asp-for="TaskName">Task Name</label>
            <input asp-for="TaskName" class="form-control" placeholder="Enter task name" />
            <span asp-validation-for="TaskName" class="text-danger"></span>
        </div>

        <!-- Access UserId from Session -->
        <input type="hidden" asp-for="UserId" value="@Context.Session.GetInt32("UserId")" />

        <!-- Hidden fields for Status, CreatedDate, and CompletedDate -->
        <input asp-for="Status" type="hidden" value="false" />
        <input asp-for="CreatedDate" type="hidden" value="@DateTime.Now" />
        <input asp-for="CompletedDate" type="hidden" value="@DateTime.Now" />

        <button type="submit" class="btn btn-primary">Add Task</button>
    </form>
</div>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
