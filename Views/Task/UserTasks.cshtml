 @model List<TodoFrontend_MVC.Models.TasksModel>

<h2>Your Tasks</h2>
<table>
    <thead>
        <tr>
            <th>Task Name</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var task in Model)
        {
            <tr>
                <td>@task.TaskName</td>
                <td>@(task.Status ? "Completed" : "Incomplete")</td>
                <td>
                    <!-- Action buttons (e.g., mark as done, edit, delete) -->
                    <a href="@Url.Action("MarkTaskDone", "Task", new { id = task.Id, userId = task.UserId })">Mark as Done</a>
                </td>
            </tr>
        }
    </tbody>
</table>
