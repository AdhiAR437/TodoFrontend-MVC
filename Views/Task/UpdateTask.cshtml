 @model TodoFrontend_MVC.Models.TasksModel

<form asp-action="UpdateTask" method="post">
    <input type="hidden" asp-for="Id" /> <!-- Hidden field for task ID -->
    <div>
        <label>Task Name</label>
        <input asp-for="TaskName" />
    </div>
    <div>
        <label>User ID</label>
        <input asp-for="UserId"  /> <!-- Optionally, hidden if you want to keep it from the user -->
    </div>

    <!-- Any other fields you want to allow users to update -->

    <button type="submit">Update Task</button>
</form>
