 @model TodoFrontend_MVC.Models.ResetPasswordRequest
@{
    Layout = null; // Disable the layout for this view
}
<!-- Include Bootstrap CSS -->
<link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />

<style>
    .reset-password-container {
        max-width: 500px;
        margin: auto;
        padding: 20px;
        border: 1px solid #ddd;
        border-radius: 8px;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
        margin-top: 50px;
        background-color: #f9f9f9;
    }

    .reset-password-container h2 {
        text-align: center;
        margin-bottom: 20px;
        color: #333;
    }

    .reset-password-container .form-group label {
        font-weight: bold;
        color: #555;
    }

    .reset-password-container .btn-primary {
        width: 100%;
    }

    .error-messages {
        color: #dc3545; /* Bootstrap danger color */
        margin-top: 10px;
        text-align: center;
    }
</style>

<div class="container reset-password-container">
    <h2>Reset Password</h2>
    <form asp-action="ResetPassword" method="post">
        <input type="hidden" asp-for="Token" />
        <input type="hidden" asp-for="Email" />

        <div class="form-group">
            <label asp-for="NewPassword">New Password:</label>
            <input asp-for="NewPassword" class="form-control" type="password" required placeholder="Enter new password" />
        </div>
        <div class="form-group">
            <label asp-for="ConfirmPassword">Confirm Password:</label>
            <input asp-for="ConfirmPassword" class="form-control" type="password" required placeholder="Confirm new password" />
        </div>
        <button type="submit" class="btn btn-primary">Reset Password</button>
    </form>

    @if (!ViewData.ModelState.IsValid)
    {
        <div class="error-messages">
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <p>@error.ErrorMessage</p>
            }
        </div>
    }
</div>
