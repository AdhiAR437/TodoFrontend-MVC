 @model TodoFrontend_MVC.Models.ForgotPasswordRequest

<h2>Forgot Password</h2>
<p>Enter your email address below, and we will send you a link to reset your password.</p>

<form asp-controller="User" asp-action="ForgotPassword" method="post">
    <div>
        <label>Email:</label>
        <input asp-for="Email" type="email" required />
    </div>
    <button type="submit">Send Reset Link</button>
</form>

@if (ViewBag.Message != null)
{
    <p>@ViewBag.Message</p>
}
