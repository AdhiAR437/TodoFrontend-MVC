 @model TodoFrontend_MVC.Models.LoginRequest

<h2>Login</h2>
<form asp-controller="User" asp-action="Login" method="post">
    <div>
        <label>Email:</label>
        <input asp-for="Email" />
    </div>
    <div>
        <label>Password:</label>
        <input asp-for="Password" type="password" />
    </div>
    <button type="submit">Login</button>
</form>

<p><a asp-controller="User" asp-action="ForgotPassword">Forgot Password?</a></p>
