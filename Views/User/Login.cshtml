 @model TodoFrontend_MVC.Models.LoginRequest
@{
    Layout = null; // Disable the layout for this view
}
<!-- Include Bootstrap CSS -->
<link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />

<style>
    .login-container {
        max-width: 400px;
        margin: auto;
        padding: 20px;
        border: 1px solid #ddd;
        border-radius: 8px;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
        margin-top: 50px;
        background-color: #f9f9f9;
    }

        .login-container h2 {
            text-align: center;
            margin-bottom: 20px;
            color: #333;
        }

        .login-container .form-group label {
            font-weight: bold;
            color: #555;
        }

        .login-container .btn-primary {
            width: 100%;
        }

    .forgot-password-link, .signup-link {
        display: block;
        text-align: center;
        margin-top: 10px;
        font-size: 0.9rem;
    }
</style>

<div class="container login-container">
    <h2>Login</h2>
    <form asp-controller="User" asp-action="Login" method="post">
        <div class="form-group">
            <label asp-for="Email">Email:</label>
            <input asp-for="Email" class="form-control" placeholder="Enter your email" />
        </div>
        <div class="form-group">
            <label asp-for="Password">Password:</label>
            <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password" />
        </div>
        <button type="submit" class="btn btn-primary">Login</button>
    </form>

    <!-- Forgot Password Link -->
    <p class="forgot-password-link">
        <a asp-controller="User" asp-action="ForgotPassword">Forgot Password?</a>
    </p>

    <!-- Signup Redirect Link -->
    <p class="signup-link">
        Don't have an account? <a asp-controller="User" asp-action="Signup">Sign up here</a>
    </p>
</div>
